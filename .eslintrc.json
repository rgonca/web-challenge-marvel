{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard-with-typescript",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "quotes": ["error", "double", { "avoidEscape": true }],
        "semi": ["error", "always"],
        "@typescript-eslint/quotes": "off",
        "@typescript-eslint/semi": "off",
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
